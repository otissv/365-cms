import { screen } from "@testing-library/react"
import type { DocumentProviderProps } from "../src/documents/provider.documents"
import {
  collection,
  DocumentConsumer,
  providerRender,
} from "./helper.provider.documents"

describe("", () => {
  test("NameConsumer shows value from provider", () => {
    const providerProps: Partial<DocumentProviderProps> = {
      collection,
    }
    providerRender(<DocumentConsumer />, providerProps)

    expect(screen.getByText(/^My Name Is:/)).toHaveTextContent(
      "My Name Is: C3P0"
    )
  })
})
