{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": ["**/*.css"],
  "files": ["dist"],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./components/*": ["./src/components/*.ts", "./src/components/*.tsx"],
    "./*": ["./src/ui/*.ts", "./src/ui/*.tsx"],
    "./src/lib/utils": "./src/lib/utils.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tailwindcss -i ./src/css/styles.css -o ./dist/index.css",
    "dev": "tailwindcss -i ./src/css/styles.css -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.2.61",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.4.0"
  }
}
